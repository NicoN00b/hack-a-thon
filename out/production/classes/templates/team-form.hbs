{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit this Team!</h1>
        <form action="/teams/{{editTeam.id}}/update" method="post">

                <label for="title">Edit this team's name</label>
                <input id="title" name="title" type="text" value="{{editTeam.title}}">

                <label for="description">Edit this place's description</label>
                <input id="description" name="description" type="text" value="{{editTeam.description}}">
                <button type="submit" class="btn btn-default">Edit Team!</button>
        </form>

    {{else}}
        <h1>Add a new Team!</h1>

        <form action="/teams/new" method="post">

            <label for="title">This team's name</label>
            <input id="title" name="title">

            <label for="description">This team's description</label>
            <input id="description" name="description">


            <button type="submit" class="btn btn-default">Edit Team!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}