{{#partial "content"}}

    {{#if editPlace}}
        <h1>Edit this Team!</h1>
        <form action="/teams/{{editPlace.id}}/update" method="post">
            <div class="form-control">
                <label for="title">Edit this team's name</label>
                <input id="title" name="title"  value="{{editTeam.title}}">
            </div>
            <div class="form-control">
                <label for="description">Edit this place's description</label>
                <input id="description" name="description" type="text" value="{{editTeam.description}}">
            </div>
            <div class="form-control">
                <label for="members">Edit this team's members</label>
                <input id="members" name="members" type="text" value="{{editTeam.members}}">
            </div>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>

    {{else}}
            <h1>Add a new Team!</h1>

        <form action="/teams/new" method="post">
            <div class="form-control">
                <label for="title">This team's name</label>
                <input id="title" name="title">
            </div>
            <div class="form-control">
                <label for="description">This team's description</label>
                <input id="description" name="description" >
            </div>
            <div class="form-control">
                <label for="members">This team's members</label>
                <input id="members" name="members">
            </div>
    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>

{{/partial}}

{{> layout.hbs}}